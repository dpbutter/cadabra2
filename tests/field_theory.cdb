
def test01():
    __cdbkernel__=create_scope()
    \delta{#}::KroneckerDelta.
    obj1:= 2*a*\delta^{i1 j1 i2 j2};
    expand_delta(_)
    distribute(_)
    tst1:= a*\delta^{i1 j1}\delta^{i2 j2}-a*\delta^{i2 j1}\delta^{i1 j2}-@(obj1);
    assert(tst1==0)
    print('Test 01 passed')

test01()
    
