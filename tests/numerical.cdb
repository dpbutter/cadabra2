

def test01():
    __cdbkernel__=create_scope()
    {i,j,k}::Indices;
    {i,j,k}::Integer(1..3);
    rl:= N_{i j} -> A_{i j};
    ex:= N_{1 2};
    substitute(ex, rl)
    tst:= A_{1 2} - @(ex);
    assert(tst==0)
    print("Test 01 passed")

test01()



