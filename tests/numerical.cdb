    print("Test 05 passed")

test05()


def test06():
    __cdbkernel__=create_scope()
    {t}::Coordinate;
    ex := Q / (f**2 - Q**2);
    substitute(ex, $ f = (Q**2 - \alpha )**(1/2) $)
    tst:= - Q / \alpha - @(ex);
    assert(tst==0)
    print("Test 06 passed")

test06()

def test07():
    try:
       ex:=1/0;
       assert(1==0)
    except RuntimeError as err:
       print("Test 07a passed")
    try:
       ex:=1/a;
       substitute(ex, $a->0$)
       assert(1==0)
    except RuntimeError as err:
       print("Test 07b passed")
    try:
       ex:=1/(a-b);
       substitute(ex, $a->b$)
       assert(1==0)
    except RuntimeError as err:
       print("Test 07c passed")

test07()
